{
  "name": "ci.predeps-ubuntu20.04",
  "build": {
    "context": "${localWorkspaceFolder}",
    "dockerfile": "${localWorkspaceFolder}/.ci.predeps/Containerfile.ubuntu20.04"
  },
  "capAdd": [
    "SYS_ADMIN"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "mesonbuild.mesonbuild"
      ],
      "settings": {
        "mesonbuild.buildFolder": ".devcontainer/ubuntu20.04/builddir-${devcontainerId}",
        "mesonbuild.configureOnOpen": true,
        "mesonbuild.configureOptions": [
          "--native-file=image.ini",
          "-Dhpcprof_mpi=enabled",
          "-Dpython=enabled",
          "-Dpapi=enabled",
          "-Dopencl=enabled",
          "-Drocm=enabled"
        ]
      }
    }
  }
}
