{
  "name": "ci.predeps-cuda12.0",
  "build": {
    "args": {
      "CUDA_VERSION": "12.0.1"
    },
    "context": "${localWorkspaceFolder}",
    "dockerfile": "${localWorkspaceFolder}/.ci.predeps/Containerfile.cuda"
  },
  "capAdd": [
    "SYS_ADMIN"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "mesonbuild.mesonbuild"
      ],
      "settings": {
        "mesonbuild.buildFolder": ".devcontainer/cuda12.0/builddir-${devcontainerId}",
        "mesonbuild.configureOnOpen": true,
        "mesonbuild.configureOptions": [
          "--native-file=image.ini",
          "-Dhpcprof_mpi=enabled",
          "-Dpython=enabled",
          "-Dpapi=enabled",
          "-Dopencl=enabled",
          "-Dcuda=enabled"
        ],
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "args": [
              "-l"
            ],
            "icon": "terminal-bash",
            "path": "/usr/bin/bash"
          },
          "zsh": {
            "args": [
              "-l"
            ],
            "icon": "terminal-bash",
            "path": "/usr/bin/zsh"
          }
        }
      }
    }
  },
  "features": {
    "../bash-completion-feature": {},
    "ghcr.io/devcontainers-contrib/features/poetry:2": {},
    "ghcr.io/devcontainers-contrib/features/pre-commit:2": {},
    "ghcr.io/devcontainers-contrib/features/ripgrep:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": true,
      "version": "latest"
    }
  },
  "runArgs": [
    "--gpus=all"
  ]
}
