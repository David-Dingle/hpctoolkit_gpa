{
  "name": "ci.predeps-leap15",
  "build": {
    "context": "${localWorkspaceFolder}",
    "dockerfile": "${localWorkspaceFolder}/.ci.predeps/Containerfile.leap15"
  },
  "capAdd": [
    "SYS_ADMIN"
  ],
  "containerEnv": {
    "OMPI_ALLOW_RUN_AS_ROOT": "1",
    "OMPI_ALLOW_RUN_AS_ROOT_CONFIRM": "1"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "mesonbuild.mesonbuild"
      ],
      "settings": {
        "mesonbuild.buildFolder": ".devcontainer/leap15/builddir-${devcontainerId}",
        "mesonbuild.configureOnOpen": true,
        "mesonbuild.configureOptions": [
          "--native-file=image.ini",
          "-Dauto_features=enabled",
          "-Dcuda=disabled",
          "-Drocm=disabled",
          "-Dlevel0=disabled",
          "-Dgtpin=disabled"
        ],
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "args": [
              "-l"
            ],
            "icon": "terminal-bash",
            "path": "/usr/bin/bash"
          },
          "zsh": {
            "args": [
              "-l"
            ],
            "icon": "terminal-bash",
            "path": "/usr/bin/zsh"
          }
        }
      }
    }
  },
  "features": {
    "../leap15-extra-packages": {}
  },
  "remoteEnv": {
    "BUILDDIR": "${containerWorkspaceFolder}/.devcontainer/leap15/builddir-${devcontainerId}",
    "builddir": "${containerWorkspaceFolder}/.devcontainer/leap15/builddir-${devcontainerId}"
  }
}
